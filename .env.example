# Example configuration for pocket-web-backend
# Copy this file to .env and modify the values according to your needs

# Server bind address
# 0.0.0.0 = listen on all interfaces
# 127.0.0.1 = localhost only
# 192.168.1.100 = specific IP
POCKET_ADDRESS=0.0.0.0

# Server listening port
POCKET_PORT=8080

# Maximum number of threads for blocking operations
POCKET_MAX_THREADS=2

# Session expiration time in seconds
# 300 = 5 minutes
# 1800 = 30 minutes  
# 3600 = 1 hour
POCKET_SESSION_EXPIRATION=300